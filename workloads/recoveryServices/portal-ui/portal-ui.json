{
    "$schema": "https://schema.management.azure.com/schemas/2021-09-09/uiFormDefinition.schema.json",
    "view": {
        "kind": "Form",
        "properties": {
            "title": "MicroAge Services Recovery Services Baseline",
            "steps": [
                {
                    "name": "basics",
                    "label": "Deployment Settings",
                    "elements": [
                        {
                            "name": "resourceScope",
                            "type": "Microsoft.Common.ResourceScope",
							"location": {
                                "resourceTypes": [
                                    "microsoft.recoveryservices/vaults"
                                ]
                            }
                        },
                        {
                            "name": "subscriptionID",
                            "type": "Microsoft.Solutions.ArmApiControl",
                            "request": {
                                "method": "GET",
                                "path": "subscriptions?api-version=2022-12-01"
                                }
                        },
                        {
                            "name": "subSelector",
                            "label": "Select Subscription",
                            "type": "Microsoft.Common.DropDown",
                            "defaultValue": "",
                            "toolTip": "Select the subscription to deploy the vault to.",
                            "filter": true,
                            "constraints": {
                                "allowedValues": "[map(steps('basics').subscriptionID.value, (item) => parse(concat('{\"label\":\"', item.displayName, '\",\"value\":\"', item.subscriptionId, '\"}')))]",
                                "required": true
                            },
                            "visible": true
                        }
                    ]
                },
				{
					"name": "rsvSettings",
					"label": "Recovery Services Settings",
					"elements": [
                        {
                            "name": "backupRGName",
                            "type": "Microsoft.Common.TextBox",
                            "label": "Backup RG Name",
                            "subLabel": "",
                            "defaultValue": "",
                            "toolTip": "",
                            "constraints": {
                                "required": true,
                                "regex": "",
                                "validationMessage": "",
                                "validations": []
                            },
                            "infoMessages": [],
                            "visible": true
                        },
                        {
                            "name": "vaultName",
                            "type": "Microsoft.Common.TextBox",
                            "label": "Vault Name",
                            "subLabel": "",
                            "defaultValue": "",
                            "toolTip": "",
                            "constraints": {
                                "required": true,
                                "regex": "",
                                "validationMessage": "",
                                "validations": []
                            },
                            "infoMessages": [],
                            "visible": true
                        }
					]
				}
            ]
        },
        "outputs": {
            "kind": "ManagementGroup",
            "location": "[steps('basics').resourceScope.location.name]",
            "managementGroupId": "[steps('basics').resourceScope.managementGroup.id]",
            "parameters": {
                "subscriptionID": "[steps('basics').subSelector]",
                "backupRGName": "[steps('rsvSettings').backupRGName]",
                "location": "[steps('basics').resourceScope.location.name]",
                "vaultName": "[steps('rsvSettings').vaultName]",
                "assignmentMgmtGroupID": "[steps('basics').resourceScope.managementGroup.id]"
            }
        }
    }
}